@page "/"
@using SIMOP_frontend.Models
@using SIMOP_frontend.Services
@inject IProyectoService ProyectoService
@inject ICategoriaService CategoriaService
@inject IHitoService HitoService
@inject ITareaService TareaService
@inject IPresupuestoService PresupuestoService
@inject NavigationManager Navigation

<PageTitle>Dashboard - SIMOP</PageTitle>

<div class="dashboard-container">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-speedometer2"></i> Dashboard General</h2>
            <p class="text-muted mb-0">Resumen completo del sistema de monitoreo de proyectos</p>
        </div>
        <div>
            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/proyectos")'>
                <i class="bi bi-plus-circle"></i> Nuevo Proyecto
            </button>
        </div>
    </div>

    @if (cargando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3 text-muted">Cargando dashboard...</p>
        </div>
    }
    else
    {
        <!-- Estadísticas Principales -->
        <div class="row g-4 mb-4">
            <div class="col-lg-3 col-md-6">
                <div class="stat-card gradient-purple" @onclick='() => Navigation.NavigateTo("/proyectos")'>
                    <div class="stat-icon">
                        <i class="bi bi-folder-fill"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@proyectos.Count</h3>
                        <p>Proyectos Activos</p>
                        <small class="text-white-50">
                            <i class="bi bi-arrow-up"></i> Total en sistema
                        </small>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stat-card gradient-blue" @onclick='() => Navigation.NavigateTo("/hitos")'>
                    <div class="stat-icon">
                        <i class="bi bi-flag-fill"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@hitos.Count</h3>
                        <p>Hitos Registrados</p>
                        <small class="text-white-50">
                            <i class="bi bi-check-circle"></i> @hitosCompletados completados
                        </small>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stat-card gradient-green" @onclick='() => Navigation.NavigateTo("/tareas")'>
                    <div class="stat-icon">
                        <i class="bi bi-check2-square"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@tareas.Count</h3>
                        <p>Tareas Totales</p>
                        <small class="text-white-50">
                            <i class="bi bi-check-all"></i> @tareasCompletadas completadas
                        </small>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stat-card gradient-orange" @onclick='() => Navigation.NavigateTo("/presupuesto")'>
                    <div class="stat-icon">
                        <i class="bi bi-cash-stack"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@totalGastado.ToString("C0")</h3>
                        <p>Presupuesto Gastado</p>
                        <small class="text-white-50">
                            <i class="bi bi-percent"></i> @porcentajeGasto% del total
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alertas Importantes -->
        @if (alertas.Any())
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow-sm border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                <i class="bi bi-exclamation-triangle-fill"></i> Alertas del Sistema (@alertas.Count)
                            </h5>
                        </div>
                        <div class="card-body">
                            @foreach (var alerta in alertas.Take(5))
                            {
                                <div class="alert alert-@alerta.Tipo mb-2">
                                    <i class="bi bi-@alerta.Icono"></i> <strong>@alerta.Titulo:</strong> @alerta.Mensaje
                                </div>
                            }
                            @if (alertas.Count > 5)
                            {
                                <small class="text-muted">Y @(alertas.Count - 5) alertas más...</small>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Progreso Global y Presupuesto -->
        <div class="row g-4 mb-4">
            <div class="col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-bar-chart-fill"></i> Progreso de Proyectos</h5>
                    </div>
                    <div class="card-body">
                        @if (proyectos.Any())
                        {
                            @foreach (var proyecto in proyectos.OrderByDescending(p => CalcularProgresoProyecto(p)).Take(5))
                            {
                                var progreso = CalcularProgresoProyecto(proyecto);
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <strong class="small">@proyecto.pro_nombre</strong>
                                        <span class="badge bg-@(progreso >= 80 ? "success" : progreso >= 50 ? "primary" : "warning")">
                                            @progreso%
                                        </span>
                                    </div>
                                    <div class="progress" style="height: 10px;">
                                        <div class="progress-bar bg-@(progreso >= 80 ? "success" : progreso >= 50 ? "primary" : "warning")"
                                             style="width: @progreso%">
                                        </div>
                                    </div>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar3"></i>
                                        @proyecto.pro_fechaInicio?.ToString("dd/MM/yy") - @proyecto.pro_fechaFinEstimada?.ToString("dd/MM/yy")
                                    </small>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1"></i>
                                <p>No hay proyectos registrados</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-piggy-bank-fill"></i> Estado Presupuestario</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center mb-4">
                            <div class="col-4">
                                <div class="stat-box">
                                    <h4 class="text-primary">@presupuestoTotal.ToString("C0")</h4>
                                    <small class="text-muted">Total</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-box">
                                    <h4 class="text-danger">@totalGastado.ToString("C0")</h4>
                                    <small class="text-muted">Gastado</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-box">
                                    <h4 class="text-success">@((presupuestoTotal - totalGastado).ToString("C0"))</h4>
                                    <small class="text-muted">Disponible</small>
                                </div>
                            </div>
                        </div>

                        <h6 class="mb-3">Proyectos con Mayor Gasto</h6>
                        @foreach (var proyecto in proyectos.OrderByDescending(p => ObtenerGastoProyecto(p.pro_codigo)).Take(5))
                        {
                            var gastado = ObtenerGastoProyecto(proyecto.pro_codigo);
                            var porcentaje = proyecto.pro_presupuestoTotal > 0 ? (int)((gastado / proyecto.pro_presupuestoTotal) * 100) : 0;

                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <strong class="small">@proyecto.pro_nombre</strong>
                                    <span class="text-@(porcentaje > 100 ? "danger" : porcentaje > 80 ? "warning" : "success") fw-bold small">
                                        @gastado.ToString("C0")
                                    </span>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-@(porcentaje > 100 ? "danger" : porcentaje > 80 ? "warning" : "success")"
                                         style="width: @Math.Min(porcentaje, 100)%">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Actividad Reciente y Tareas Pendientes -->
        <div class="row g-4 mb-4">
            <div class="col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-clock-history"></i> Actividad Reciente</h5>
                    </div>
                    <div class="card-body">
                        @if (movimientos.Any())
                        {
                            <div class="timeline">
                                @foreach (var mov in movimientos.OrderByDescending(m => m.ppre_fecha).Take(5))
                                {
                                    var proyecto = proyectos.FirstOrDefault(p => p.pro_codigo == mov.ppre_codproyecto);
                                    <div class="timeline-item">
                                        <div class="timeline-marker bg-danger"></div>
                                        <div class="timeline-content">
                                            <small class="text-muted">@mov.ppre_fecha?.ToString("dd/MM/yyyy HH:mm")</small>
                                            <p class="mb-0"><strong>@(proyecto?.pro_nombre ?? "Proyecto")</strong></p>
                                            <small>Gasto registrado: <strong class="text-danger">@mov.ppre_monto.ToString("C0")</strong></small>
                                            <p class="text-muted small mb-0">@mov.ppre_descripcion</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1"></i>
                                <p>No hay actividad reciente</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-list-check"></i> Tareas Pendientes (@tareas.Count(t => t.pta_Estado != "Completada"))</h5>
                    </div>
                    <div class="card-body">
                        @if (tareas.Any(t => t.pta_Estado != "Completada"))
                        {
                            @foreach (var tarea in tareas.Where(t => t.pta_Estado != "Completada").OrderBy(t => t.pta_FechaInicio).Take(8))
                            {
                                var proyecto = proyectos.FirstOrDefault(p => p.pro_codigo == tarea.pta_codproyecto);
                                <div class="d-flex align-items-start mb-3 pb-3 border-bottom">
                                    <div class="form-check me-3">
                                        <input class="form-check-input" type="checkbox" disabled>
                                    </div>
                                    <div class="flex-grow-1">
                                        <p class="mb-1"><strong>@tarea.pta_Descripcion</strong></p>
                                        <small class="text-muted">
                                            <i class="bi bi-folder"></i> @(proyecto?.pro_nombre ?? "Sin proyecto")
                                        </small>
                                        <br>
                                        <span class="badge bg-@(tarea.pta_Estado == "En Progreso" ? "info" : "secondary") mt-1">
                                            @tarea.pta_Estado
                                        </span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="bi bi-check-circle fs-1 text-success"></i>
                                <p>¡Todas las tareas completadas!</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Categorías -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="bi bi-tag-fill"></i> Proyectos por Categoría</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var categoria in categorias)
                            {
                                var proyectosCategoria = proyectos.Count(p => p.pro_codCategoria == categoria.cat_codigo);
                                @if (proyectosCategoria > 0)
                                {
                                    <div class="col-md-3 col-sm-6 mb-3">
                                        <div class="category-card">
                                            <h4 class="text-primary">@proyectosCategoria</h4>
                                            <p class="mb-0">@categoria.cat_nombre</p>
                                            <small class="text-muted">proyectos</small>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
