@code {
    private List<ProyectoDto> proyectos = new();
    private List<CategoriaDto> categorias = new();
    private List<HitoDto> hitos = new();
    private List<TareaDto> tareas = new();
    private List<PresupuestoDto> movimientos = new();
    private bool cargando = true;
    private List<Alerta> alertas = new();

    private decimal presupuestoTotal => proyectos.Sum(p => p.pro_presupuestoTotal);
    private decimal totalGastado => movimientos.Sum(m => m.ppre_monto);
    private int porcentajeGasto => presupuestoTotal > 0 ? (int)((totalGastado / presupuestoTotal) * 100) : 0;
    private int hitosCompletados => hitos.Count(h => CalcularProgresoHito(h) == 100);
    private int tareasCompletadas => tareas.Count(t => t.pta_Estado == "Completada");

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        try
        {
            cargando = true;
            proyectos = await ProyectoService.GetProyectos();
            categorias = await CategoriaService.GetCategorias();
            hitos = await HitoService.GetHitos();
            tareas = await TareaService.GetTareas();
            movimientos = await PresupuestoService.GetMovimientos();

            GenerarAlertas();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            cargando = false;
        }
    }

    private void GenerarAlertas()
    {
        alertas.Clear();

        // Proyectos con presupuesto excedido
        foreach (var proyecto in proyectos)
        {
            var gastado = ObtenerGastoProyecto(proyecto.pro_codigo);
            var porcentaje = proyecto.pro_presupuestoTotal > 0 ? (gastado / proyecto.pro_presupuestoTotal) * 100 : 0;

            if (porcentaje > 100)
            {
                alertas.Add(new Alerta
                {
                    Tipo = "danger",
                    Icono = "exclamation-circle-fill",
                    Titulo = "Presupuesto Excedido",
                    Mensaje = $"El proyecto '{proyecto.pro_nombre}' ha superado su presupuesto en {(porcentaje - 100):F0}%"
                });
            }
            else if (porcentaje > 80)
            {
                alertas.Add(new Alerta
                {
                    Tipo = "warning",
                    Icono = "exclamation-triangle-fill",
                    Titulo = "Presupuesto en Riesgo",
                    Mensaje = $"El proyecto '{proyecto.pro_nombre}' ha utilizado el {porcentaje:F0}% de su presupuesto"
                });
            }
        }

        // Tareas atrasadas
        var tareasAtrasadas = tareas.Where(t =>
            t.pta_Estado != "Completada" &&
            t.pta_FechaFin.HasValue &&
            t.pta_FechaFin.Value < DateTime.Now
        ).Count();

        if (tareasAtrasadas > 0)
        {
            alertas.Add(new Alerta
            {
                Tipo = "warning",
                Icono = "clock-fill",
                Titulo = "Tareas Atrasadas",
                Mensaje = $"Hay {tareasAtrasadas} tarea(s) que han pasado su fecha límite"
            });
        }
    }

    private int CalcularProgresoProyecto(ProyectoDto proyecto)
    {
        if (proyecto.pro_fechaInicio == null || proyecto.pro_fechaFinEstimada == null)
            return 0;

        var inicio = proyecto.pro_fechaInicio.Value;
        var fin = proyecto.pro_fechaFinEstimada.Value;
        var hoy = DateTime.Now;

        if (hoy < inicio) return 0;
        if (hoy > fin) return 100;

        var totalDias = (fin - inicio).TotalDays;
        var diasTranscurridos = (hoy - inicio).TotalDays;

        return (int)((diasTranscurridos / totalDias) * 100);
    }

    private int CalcularProgresoHito(HitoDto hito)
    {
        if (hito.phi_fechaInicio == null || hito.phi_fechaFin == null)
            return 0;

        var inicio = hito.phi_fechaInicio.Value;
        var fin = hito.phi_fechaFin.Value;
        var hoy = DateTime.Now;

        if (hoy < inicio) return 0;
        if (hoy > fin) return 100;

        var totalDias = (fin - inicio).TotalDays;
        var diasTranscurridos = (hoy - inicio).TotalDays;

        return (int)((diasTranscurridos / totalDias) * 100);
    }

    private decimal ObtenerGastoProyecto(int proyectoId)
    {
        return movimientos.Where(m => m.ppre_codproyecto == proyectoId).Sum(m => m.ppre_monto);
    }

    private class Alerta
    {
        public string Tipo { get; set; } = "info";
        public string Icono { get; set; } = "info-circle";
        public string Titulo { get; set; } = string.Empty;
        public string Mensaje { get; set; } = string.Empty;
    }
}