@page "/categorias"
@using SIMOP_frontend.Models
@using SIMOP_frontend.Services
@inject ICategoriaService CategoriaService
@inject IJSRuntime JS

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3><i class="bi bi-tag-fill"></i> Gestión de Categorías</h3>
        <button class="btn btn-primary" @onclick="AgregarNueva">
            <i class="bi bi-plus-circle"></i> Nueva Categoría
        </button>
    </div>

    @if (mensaje != null)
    {
        <div class="alert alert-@(mensaje.Tipo) alert-dismissible fade show" role="alert">
            <strong>@(mensaje.Tipo == "success" ? "✓" : "✗")</strong> @mensaje.Texto
            <button type="button" class="btn-close" @onclick="() => mensaje = null"></button>
        </div>
    }

    @if (cargando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-2">Cargando categorías...</p>
        </div>
    }
    else if (categorias == null || !categorias.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay categorías registradas. ¡Crea la primera!
        </div>
    }
    else
    {
        <div class="mt-3">
            <small class="text-muted">
                <i class="bi bi-info-circle"></i> Total de categorías: <strong>@categorias.Count</strong>
            </small>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">ID</th>
                        <th>Nombre</th>
                        <th style="width: 180px;" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in categorias)
                    {
                        <tr class="@(editando.ContainsKey(cat.cat_codigo) ? "table-active" : "")">
                            <td class="align-middle">
                                @if (cat.cat_codigo > 0)
                                {
                                    @cat.cat_codigo
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Nuevo</span>
                                }
                            </td>
                            <td>
                                @if (editando.ContainsKey(cat.cat_codigo))
                                {
                                    <input type="text"
                                           class="form-control"
                                           @bind-value="editando[cat.cat_codigo].cat_nombre"
                                           @bind-value:event="oninput"
                                           placeholder="Nombre de la categoría"
                                           maxlength="100" />
                                    @if (string.IsNullOrWhiteSpace(editando[cat.cat_codigo].cat_nombre))
                                    {
                                        <small class="text-danger">El nombre es requerido</small>
                                    }
                                }
                                else
                                {
                                    <span class="align-middle">@cat.cat_nombre</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (editando.ContainsKey(cat.cat_codigo))
                                {
                                    <button class="btn btn-success btn-sm me-1"
                                            @onclick="() => Guardar(cat.cat_codigo)"
                                            disabled="@(string.IsNullOrWhiteSpace(editando[cat.cat_codigo].cat_nombre))">
                                        <i class="bi bi-check-lg"></i> Guardar
                                    </button>
                                    <button class="btn btn-secondary btn-sm"
                                            @onclick="() => Cancelar(cat.cat_codigo)">
                                        <i class="bi bi-x-lg"></i> Cancelar
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-warning btn-sm me-1"
                                            @onclick="() => Editar(cat)">
                                        <i class="bi bi-pencil"></i> Editar
                                    </button>
                                    <button class="btn btn-danger btn-sm"
                                            @onclick="() => ConfirmarEliminar(cat)">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        
    }
</div>

@code {
    private List<CategoriaDto> categorias = new();
    private Dictionary<int, CategoriaDto> editando = new();
    private bool cargando = true;
    private Mensaje? mensaje;

    protected override async Task OnInitializedAsync()
    {
        await CargarCategorias();
    }

    private async Task CargarCategorias()
    {
        try
        {
            cargando = true;
            categorias = await CategoriaService.GetCategorias();
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error al cargar categorías: {ex.Message}", "danger");
        }
        finally
        {
            cargando = false;
        }
    }

    private void AgregarNueva()
    {
        if (editando.Any())
        {
            MostrarMensaje("Guarda o cancela los cambios actuales antes de crear una nueva categoría", "warning");
            return;
        }

        int nuevoId = categorias.Any() ? categorias.Min(x => x.cat_codigo) - 1 : -1;
        var nueva = new CategoriaDto { cat_codigo = nuevoId, cat_nombre = "" };

        categorias.Insert(0, nueva);
        editando[nuevoId] = new CategoriaDto { cat_codigo = nuevoId, cat_nombre = "" };
    }

    private void Editar(CategoriaDto cat)
    {
        if (editando.Any())
        {
            MostrarMensaje("Guarda o cancela los cambios actuales antes de editar otra categoría", "warning");
            return;
        }

        editando[cat.cat_codigo] = new CategoriaDto
        {
            cat_codigo = cat.cat_codigo,
            cat_nombre = cat.cat_nombre
        };
    }

    private void Cancelar(int id)
    {
        if (id < 0)
        {
            categorias.RemoveAll(c => c.cat_codigo == id);
        }
        editando.Remove(id);
        mensaje = null;
    }

    private async Task Guardar(int id)
    {
        var data = editando[id];

        if (string.IsNullOrWhiteSpace(data.cat_nombre))
        {
            MostrarMensaje("El nombre de la categoría es requerido", "warning");
            return;
        }

        try
        {
            bool exito;

            if (id <= 0) // Nueva categoría
            {
                exito = await CategoriaService.CreateCategoria(new CategoriaDto
                {
                    cat_nombre = data.cat_nombre.Trim()
                });

                if (exito)
                    MostrarMensaje("Categoría creada exitosamente", "success");
                else
                    MostrarMensaje("Error al crear la categoría", "danger");
            }
            else // Actualizar existente
            {
                exito = await CategoriaService.UpdateCategoria(id, new CategoriaDto
                {
                    cat_codigo = id,
                    cat_nombre = data.cat_nombre.Trim()
                });

                if (exito)
                    MostrarMensaje("Categoría actualizada exitosamente", "success");
                else
                    MostrarMensaje("Error al actualizar la categoría", "danger");
            }

            if (exito)
            {
                editando.Remove(id);
                await CargarCategorias();
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error al guardar: {ex.Message}", "danger");
        }
    }

    private async Task ConfirmarEliminar(CategoriaDto cat)
    {
        bool confirmado = await JS.InvokeAsync<bool>(
            "confirm",
            $"¿Estás seguro de eliminar la categoría '{cat.cat_nombre}'?"
        );

        if (confirmado)
        {
            await Eliminar(cat.cat_codigo);
        }
    }

    private async Task Eliminar(int id)
    {
        try
        {
            var (exito, mensajeRetornado) = await CategoriaService.DeleteCategoria(id);

            if (exito)
            {
                MostrarMensaje(mensajeRetornado, "success");
                await CargarCategorias();
            }
            else
            {
                MostrarMensaje(mensajeRetornado, "danger");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error al eliminar: {ex.Message}", "danger");
        }
    }


    private void MostrarMensaje(string texto, string tipo)
    {
        mensaje = new Mensaje { Texto = texto, Tipo = tipo };
    }

    private class Mensaje
    {
        public string Texto { get; set; } = string.Empty;
        public string Tipo { get; set; } = "info";
    }
}